<mvc:View
	controllerName="regesta.regestarapportini.controller.Login"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Shell class="noScroll">
        <FlexBox
            height="90vh"
            class="flexCenter">

            <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <Label text="{i18n>loginTitle}" class="regestaLogo" />
            <Label text="{i18n>loginSubtitle}" class="loginHeader" />
            <Label text="{i18n>inputLabel_1}" labelFor="nameInput" />
            <Input
                id="nameInput"
                class="roundedInput"
                placeholder="Inserisci il nome utente"
                valueStateText="La casella non deve essere vuota. Massimo 50 caratteri"
                value="{
                    path : '/name',
                    type : 'sap.ui.model.type.String',
                    constraints : {
                        minLength: 1,
                        maxLength: 2
                    }
                }"
                change= ".onNameChange" />

            <Label text="{i18n>inputLabel_2}" labelFor="passwordInput" />
            <Input
                id="passwordInput"
                class="roundedInput"
                type="Password"
                placeholder="Enter password" />
            <Button 
                class="roundedButton"
                text="Submit"
                press=".onSubmit" />
        </l:VerticalLayout>
        </FlexBox>
    </Shell>
</mvc:View>